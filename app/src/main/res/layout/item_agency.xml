<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/lineaLayout_ItemAgencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/logo_agencia"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/audi_logo" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_agencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audi Cuernavaca"
                    android:textColor="@color/negro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/direccion_agencia"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Av.Rio Mayo #1334, Col.Vista Hermosa\n Cuernavaca Mor, C.P. 622980"
                    android:textColor="@color/rosa" />
            </LinearLayout>

            <ImageView
                android:id="@+id/phone_agencia"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/call" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>