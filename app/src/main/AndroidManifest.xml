<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.isaigarciamoso.appautounion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivityController"
            android:screenOrientation="portrait"></activity>
        <!-- Acitividad de detalle -->
        <activity
            android:name=".controller.DetalleViewController"
            android:screenOrientation="portrait"></activity>
        <!-- Splash -->
        <activity
            android:name=".controller.SplashViewController"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.Onboarding"
            android:label="@string/title_activity_onboarding"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".controller.AgenciaViewController"
            android:label="agencia"
            android:screenOrientation="portrait">
        </activity>
    </application>
</manifest>