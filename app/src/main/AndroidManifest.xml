<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.isaigarciamoso.appautounion">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.LOCATION_HARDWARE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyARo7wawcUKbctSBpOlZzLQ-MAJyGGQY9Y" />

        <activity
            android:name=".controller.MainActivityController"
            android:screenOrientation="portrait"></activity>
        <!-- Acitividad de detalle -->
        <activity
            android:name=".controller.DetalleViewController"
            android:screenOrientation="portrait"></activity>
        <!-- Splash -->
        <activity
            android:name=".controller.SplashViewController"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.Onboarding"
            android:label="@string/title_activity_onboarding"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".controller.AgenciaViewController"
            android:label="agencia"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".controller.MapViewController"
            android:screenOrientation="portrait">

        </activity>

    </application>
</manifest>